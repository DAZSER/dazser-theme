{
  "name": "dazser-theme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --sequential clean css",
    "css": "npm-run-all --parallel css-lint css-compile --sequential css-prefix css-minify",
    "css-lint": "stylelint --config .stylelintrc --syntax scss \"scss/**/*.scss\"",
    "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/dazser-theme.scss dist/dazser-theme.css",
    "css-prefix": "postcss --config postcss.config.js --replace \"dist/*.css\" \"!dist/*.min.css\"",
    "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output dist/dazser-theme.min.css dist/dazser-theme.css",
    "clean": "rm -rf dist/**",
    "test": "npm run start"
  },
  "author": "Kyle McNally",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.2.6",
    "bootstrap": "4.0.0",
    "clean-css-cli": "^4.1.10",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "stylelint": "^8.4.0",
    "stylelint-config-recommended-scss": "^3.1.0",
    "stylelint-config-standard": "^18.1.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^2.4.0"
  },
  "browserslist": [
    "last 1 major version",
    ">= 1%",
    "Chrome >= 45",
    "Firefox >= 38",
    "Edge >= 12",
    "Explorer >= 10",
    "iOS >= 9",
    "Safari >= 9",
    "Android >= 4.4",
    "Opera >= 30"
  ]
}
